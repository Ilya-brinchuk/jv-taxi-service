<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>core.basesyntax.controllers.IndexController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getAllDrivers</servlet-name>
        <servlet-class>core.basesyntax.controllers.GetAllDriversController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAllDrivers</servlet-name>
        <url-pattern>/drivers</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>createDriver</servlet-name>
        <servlet-class>core.basesyntax.controllers.CreateDriverController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createDriver</servlet-name>
        <url-pattern>/drivers/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>createManufacturer</servlet-name>
        <servlet-class>core.basesyntax.controllers.CreateManufacturerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createManufacturer</servlet-name>
        <url-pattern>/manufacturers/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>confirm</servlet-name>
        <servlet-class>core.basesyntax.controllers.ConfirmationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>confirm</servlet-name>
        <url-pattern>/confirm</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addDriverToCar</servlet-name>
        <servlet-class>core.basesyntax.controllers.AddDriverToCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addDriverToCar</servlet-name>
        <url-pattern>/cars/drivers/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addCars</servlet-name>
        <servlet-class>core.basesyntax.controllers.CreateCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addCars</servlet-name>
        <url-pattern>/cars/add</url-pattern>
    </servlet-mapping>
</web-app>
